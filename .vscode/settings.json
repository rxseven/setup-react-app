{
  // Disable built-in code formatter and validator
  "editor.formatOnSave": false,
  "javascript.format.enable": false,
  "javascript.validate.enable": false,

  // Stylelint
  // Prevent both the editorâ€™s stylesheet built-in linters and Stylelint
  // from reporting essentially the same errors.
  "css.validate": false,
  "less.validate": false,
  "scss.validate": false,

  // File associations to languages
  "files.associations": {
    ".babelrc": "json",
    ".eslintrc": "json",
    ".lintstagedrc": "json",
    ".stylelintrc": "json"
  }
}
